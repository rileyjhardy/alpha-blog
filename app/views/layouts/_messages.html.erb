<div class="container">
<% flash.each do |name, msg| %>
  <div class="alert <%= name == "notice" ? "alert-success" : "alert-danger" %> alert-success alert-dismissible fade show">
  <% puts name %>
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
  </div>
<% end %>
</div>